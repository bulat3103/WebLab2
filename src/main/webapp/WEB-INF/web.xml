<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>com.example.WebLab2.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoadSessionDataServlet</servlet-name>
        <servlet-class>com.example.WebLab2.LoadSessionDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadSessionDataServlet</servlet-name>
        <url-pattern>/startLoad</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>com.example.WebLab2.AreaCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/checker</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClearTableServlet</servlet-name>
        <servlet-class>com.example.WebLab2.ClearTableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClearTableServlet</servlet-name>
        <url-pattern>/clear</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoadPointsServlet</servlet-name>
        <servlet-class>com.example.WebLab2.LoadPointsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadPointsServlet</servlet-name>
        <url-pattern>/loadPoints</url-pattern>
    </servlet-mapping>
</web-app>